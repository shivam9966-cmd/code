import pyspark.sql.functions as F

# 1️⃣ Load the Account table
account_df = spark.table("FPNA_FISRPT_SILVER.dbo.account")

# 2️⃣ Filter for rows where L4 == 'EBITDA'
ebitda_df = account_df.filter(F.col("L4") == "EBITDA")

# 3️⃣ Show unique values from L5 column
unique_l5 = ebitda_df.select("L5_Description").distinct()

# Display results
unique_l5.show(truncate=False)
