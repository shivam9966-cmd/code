output_path = "Files/SQL_DUMPS/FINAL_EXPORTS/oct_fy25_single"

(
    oct_fy25
        .coalesce(1)              # ðŸ”¥ forces Spark to write only ONE file
        .write
        .mode("overwrite")
        .option("header", True)
        .csv(output_path)
)

print("Saved as a single CSV file at:", output_path)
